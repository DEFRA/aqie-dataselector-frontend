{% extends 'layouts/page.njk' %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% block content %}
  
{# <a href="create-pollutant.html" class="govuk-back-link">Back</a> #}

<form action='/emailrequest/confirm' method="post">
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">

    <h1 class="govuk-heading-l">Request data</h1>
{% if error %}
  <div class="govuk-form-group govuk-form-group--error">
    <p id="email-error" class="govuk-error-message">
      <span class="govuk-visually-hidden">Error:</span> {{ error }}
    </p>
 <div class="govuk-form-group">
  <h1 class="govuk-label-wrapper">
    <label class="govuk-label govuk-label--l" for="email">
      Enter your email address
    </label>
  </h1>
  <div id="email-hint" class="govuk-hint">
    We’ll only send you the air pollution data you requested
  </div>
  <input class="govuk-input" id="email" name="email" type="text" aria-describedby="email-hint">
</div>
</div>
{% else %}
   
   <div class="govuk-form-group">
  <h1 class="govuk-label-wrapper">
    <label class="govuk-label govuk-label--l" for="email">
      Enter your email address
    </label>
  </h1>
  <div id="email-hint" class="govuk-hint">
    We’ll only send you the air pollution data you requested
  </div>
  <input class="govuk-input" id="email" name="email" type="text" aria-describedby="email-hint">
</div>
{% endif %}

    {{ govukButton({
      text: "Continue",
      attributes: {
        type: "submit"
      }
    }) }}
    



    </div>
  </div>
  </form>
    
<!-- TABS UI -->
{% endblock %}


