{% extends 'layouts/page.njk' %}
{% set displayBreadcrumbs = false %}
{% from "govuk/components/table/macro.njk" import govukTable %}
 {% from "govuk/components/tabs/macro.njk" import govukTabs %}
   
<script src="/path/to/govuk-frontend/govuk/all.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      window.GOVUKFrontend.initAll();
    });
    
       
        
    
  </script>
{% block content %}

 {% set mapToggletip %}
  {{ toggletip(
    '',
    'More information about the trend',
    'This monitoring site is in a city or town close to roads, motorways or highways.
    ',
    'Trend'
  )}}
{% endset %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
<h1 class="govuk-heading-xl govuk-!-margin-bottom-1">{{stationdetails.name}}</h1>   



        <strong class="govuk-tag status-tag govuk-tag--green">
            Active
          </strong>
          <p class="govuk-body status-description govuk-!-margin-top-3" id="status">Latest at {{updatedTime}}</p>
</div>
</div>
          <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
          <dl class="defra-aq-features__list govuk-!-margin-top-3" style="gap: 40px; padding-bottom: 0px;">
            <div class="defra-aq-features__item" >
              <dt class="defra-aq-features__key govuk-caption-m" >Monitoring network</dt>
              <dd class="defra-aq-features__value govuk-body" >Automatic Urban and Rural (AURN)</dd>
            </div>
            <div class="defra-aq-features__item" >
              <dt class="defra-aq-features__key govuk-caption-m" >Region</dt>
              <dd class="defra-aq-features__value govuk-body" >{{stationdetails.region}}</dd>
            </div>
            <div class="defra-aq-features__item" >
              <dt class="defra-aq-features__key govuk-caption-m">Site type</dt>
             
              <dd class="defra-aq-features__value govuk-body" >
                {# <div style="margin-left:172px"> #}
              
                  {# </div> #}
                  
                  {{stationdetails.siteType}}
                      {{ mapToggletip | safe }}
                  <p class="govuk-body govuk-!-margin-top-1"><a href={{maplocation}} class="govuk-link" target="_blank" >View on Google Maps (opens in new tab)</a></p>
              

                </dd>
             
            </div>
            </dl>
            
        {% include "partials/Yearlytab.njk" %}    
         

 
{% endblock %}